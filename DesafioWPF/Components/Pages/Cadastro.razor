@page "/Cadastro"
@using MudBlazor
@inherits LayoutComponentBase

<MudContainer Class="mt-4 px-8" MaxWidth="MaxWidth.False" Style="background-color:#fafafa;">
    <MudGrid>
        <MudItem xs="12" sm="6" md="4">
            <MudTextField Label="Nome" Variant="Variant.Text" @bind-Value="firstName" FullWidth Margin="Margin.Dense" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.People" AdornmentColor="Color.Primary" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
             <MudTextField Label="Sobrenome" Variant="Variant.Text" @bind-Value="lastName" FullWidth Margin="Margin.Dense" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.People" AdornmentColor="Color.Primary" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
             <MudTextField Label="Email" Variant="Variant.Text" @bind-Value="email" FullWidth Margin="Margin.Dense" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Email" AdornmentColor="Color.Primary" />
        </MudItem>
@*         <MudItem xs="12" sm="6" md="4">
