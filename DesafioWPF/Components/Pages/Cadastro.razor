        <MudItem xs="12" sm="6" md="4">
             <MudDatePicker Label="Data de nascimento" @bind-Date="dob" Variant="Variant.Text" Margin="Margin.Dense"  FullWidth />
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudSlider Label="Satisfaction" Min="0" Max="10" Step="1" @bind-Value="satisfactionLevel" Variant="Variant.Filled" FullWidth >Satisfação</MudSlider>
        </MudItem>
         <MudSelect  T="string" Label="Tipo" Variant="Variant.Text">
             <MudSelectItem Value="@("Orçamento")" />
             <MudSelectItem Value="@("Em Aberto")" />
             <MudSelectItem Value="@("Em produção")" />
             <MudSelectItem Value="@("Fechado")" />
         </MudSelect>
